<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <!-- Logging Properties -->
    <Properties>
        <Property name="LOG_PATTERN">%d{dd-MM-yyyy'T'HH:mm:ss.SSSZ} %p %m%n</Property>
        <Property name="basePath">quartz_logs</Property>
        <!--        <Property name="basePath">$${env:LOG_PATH}</Property>-->
    </Properties>

    <Appenders>
        <!-- Console appender configuration -->
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{dd-MM-yyyy HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </Console>

        <!-- RollingFile appender configuration -->
        <!-- filePattern is used for setting file name of archived log file -->
        <RollingFile name="LogToFile"
                     fileName="${basePath}/${date:dd-MM-yyyy}.log"
                     filePattern="${basePath}/%d{dd-MM-yyyy}.log.gz">
            <PatternLayout>
                <pattern>[%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>

            <!-- Files are roll over every day -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="2" modulate="true" />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>

        </RollingFile>

        <RollingFile name="LogHelloToFile"
                     fileName="${basePath}/helloworld/${date:dd-MM-yyyy}.log"
                     filePattern="${basePath}/%d{dd-MM-yyyy}.log.gz">
            <PatternLayout>
                <pattern>[%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>

            <!-- Files are roll over every day -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="2" modulate="true" />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>

        </RollingFile>

    </Appenders>


    <Loggers>

        <Logger name="com.quartz.jobs.HelloWorldJob" level="debug" additivity="false">
            <AppenderRef ref="LogHelloToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <Logger name="com.quartz.jobs.CopyJob" level="trace" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>


        <Root level="error">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>

    </Loggers>

</Configuration>